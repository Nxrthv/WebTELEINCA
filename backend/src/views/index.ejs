<script>
    async function enviarCorreo(event) {
        event.preventDefault();
        const nombreInteresado = document.getElementById("interesadoName").value;
        const telefonoInteresado = document.getElementById("interesadoTelf").value;

        const datosEnvio = {
            nombre: nombreInteresado,
            telefono: telefonoInteresado
        };
        try {
            const response = await fetch('http://191.97.50.142:11011/api/enviar-correoInteresado', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify(datosEnvio)
            });

            const data = await response.json();
            console.log('Respuesta completa del servidor:', data);

            if (!data.success) {
                console.error('Detalles del error del servidor:', data.error);
                throw new Error(data.error?.message || data.message || 'Error desconocido');
            }

            return true;
        } catch (error) {
            console.error('Error completo:', error);
            Swal.fire({
                icon: 'error',
                title: 'Error al enviar el correo',
                text: error.message,
                footer: 'Por favor, intente nuevamente o contacte al administrador'
            });
            return false;
        }
    }
</script>
<script>
    const carousel = document.querySelector('.comments');
    const dots = document.querySelectorAll('.dot');
    const cardWidth = document.querySelector('.card').offsetWidth;
    let currentIndex = 0;

    dots.forEach((dot, index) => {
        dot.addEventListener('click', () => {
            currentIndex = index;
            updateCarousel();
        });
    });

    function updateCarousel() {
        const isMobile = window.innerWidth < 768;
        const multiplier = isMobile ? 93 : 50;

        carousel.style.transform = `translateX(-${currentIndex * multiplier}%)`;

        dots.forEach((dot, index) => {
            dot.classList.toggle('active', index === currentIndex);
        });
    }

</script>
